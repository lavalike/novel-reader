<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Common-->
    <style name="Theme.TextAppearance.Common" />

    <style name="Theme.TextAppearance.Common.SingleLine">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--书籍-->
    <style name="Theme.TextAppearance.Book" />

    <style name="Theme.TextAppearance.Book.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--ReadActivity-->
    <style name="Theme.TextAppearance.Read" />

    <style name="Theme.TextAppearance.Read.BottomMenu">
        <item name="android:textColor">@color/read_menu_text</item>
        <item name="android:textSize">@dimen/read_text_bottom</item>
    </style>


    <style name="Theme.TextAppearance.Read.BottomMenu.Button" parent="Theme.TextAppearance.Read.BottomMenu">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>